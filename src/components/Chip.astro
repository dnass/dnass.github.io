---
interface Props {
  interactive?: boolean;
  attrs?: { [key in string]: string };
}

const { attrs, interactive = false } = Astro.props;
const El = interactive ? 'button' : 'div';
---

<El
  {...attrs}
  class:list={[
    'whitespace-nowrap rounded-full bg-theme-950 px-3 py-1 text-xs font-light leading-snug text-theme-200 md:text-sm',
    interactive &&
      'cursor-pointer transition-colors duration-100 ease-in-out hocus:bg-theme-700',
  ]}
>
  <slot />
</El>
