---
interface Props {
  interactive?: boolean;
  attrs?: { [key in string]: string };
}

const { attrs, interactive = false } = Astro.props;
const El = interactive ? 'button' : 'div';
---

<El
  {...attrs}
  class:list={[
    'bg-theme-950 text-theme-200 rounded-full px-3 py-1 text-xs leading-snug font-light whitespace-nowrap md:text-sm',
    interactive &&
      'hocus:bg-theme-700 cursor-pointer transition-colors duration-100 ease-in-out',
  ]}
>
  <slot />
</El>
